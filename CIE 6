<body>
<div class="calculator">
    <h2>Simple Calculator</h2>
    <input type="number" id="num1" placeholder="Enter first number">
    <input type="number" id="num2" placeholder="Enter second number (if needed)">
    
    <select id="operation">
        <option value="sum">Sum (+)</option>
        <option value="difference">Difference (-)</option>
        <option value="product">Product (×)</option>
        <option value="quotient">Quotient (÷)</option>
        <option value="remainder">Remainder (%)</option>
        <option value="power">Power (^)</option>
        <option value="square">Square (x²)</option>
        <option value="squareroot">Square Root (√)</option>
    </select>
    
    <button onclick="calculate()">Calculate</button>
    
    <div id="result"></div>
</div>

<script>
function calculate() {
    const num1 = parseFloat(document.getElementById("num1").value);
    const num2 = parseFloat(document.getElementById("num2").value);
    const operation = document.getElementById("operation").value;
    let result;

    if (isNaN(num1)) {
        document.getElementById("result").innerText = "Please enter a valid first number";
        return;
    }

    switch(operation) {
        case "sum":
            result = num1 + (isNaN(num2) ? 0 : num2);
            break;
        case "difference":
            result = num1 - (isNaN(num2) ? 0 : num2);
            break;
        case "product":
            result = num1 * (isNaN(num2) ? 1 : num2);
            break;
        case "quotient":
            if (num2 === 0) {
                result = "Cannot divide by zero";
            } else {
                result = num1 / num2;
            }
            break;
        case "remainder":
            if (num2 === 0) {
                result = "Cannot divide by zero";
            } else {
                result = num1 % num2;
            }
            break;
        case "power":
            result = num1 ** (isNaN(num2) ? 1 : num2);
            break;
        case "square":
            result = num1 ** 2;
            break;
        case "squareroot":
            if (num1 < 0) {
                result = "Invalid input for square root";
            } else {
                result = Math.sqrt(num1);
            }
            break;
        default:
            result = "Invalid operation";
    }

    document.getElementById("result").innerText = "Result: " + result;
}
</script>
</body>

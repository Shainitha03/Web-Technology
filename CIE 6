        border-radius: 5px;
        border: none;
        cursor: pointer;
    }
    button {
        background-color: #4CAF50;
        color: white;
    }
    button:hover {
        background-color: #45a049;
    }
    #result {
        text-align: center;
        font-size: 18px;
        font-weight: bold;
        color: #333;
    }
